fonts = arial, helvetica, sans-serif
border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments
filter-tab-content-background-color()
  background-color #f1f1f1


html, body
	margin 0
	padding 0

body
	font-family arial

#nodeDetailsDiv, #pathDetailsDiv
  font-size small
  background-color white
  border-radius 5px
  width 100%
  overflow hidden

.node-detail-header, .path-detail-header
  background-color #eee
  padding 5px
  min-width initial
  border-radius 2px

.node-detail-container, .path-detail-container
  margin-top 5px

.node-detail-row, .path-detail-row
  margin 2px -15px 2px -15px

.node-detail-close, .path-detail-close
  line-height inherit

.marker-icon
  cursor pointer

.tab-content  
  max-height 200px
  overflow-x hidden
  overflow-y scroll
  border-left: 1px solid #ddd
  border-right: 1px solid #ddd
  border-bottom: 1px solid #ddd
  filter-tab-content-background-color()

.nav-tabs > li > a
  padding 5px 10px

.nav-tabs > li.active > a, .nav-tabs > li.active > a:hover, .nav-tabs > li.active > a:focus
  filter-tab-content-background-color()

.date > span.input-group-addon
  background-color #ddd
  
#filterContainer
  font-size small
  background-color white
  padding 0px
  border-radius 5px
  width 370px

#filterLoading
  display none

#filter
  display none
  font-size small
  margin-top 0
  width 370px

.filter-row
  margin 5px -15px 2px -10px

.filter-first-row
  margin 9px -15px 2px -10px

.filter-last-row
  margin 5px -15px 11px -10px

.filter-header
  background-color #eee
  padding 5px
  min-width initial
  border-radius 2px

.filter-title
  display inline
  vertical-align middle
  font-weight bold
  margin 0 0 0 5px

.filter-label
  font-weight bold

.filter-group
  white-space nowrap
  padding 2px

.filter-footer
  margin 2px 0 0 0

.dow
  padding 0

.applyFilter
	padding 5px

.tokenized
  word-wrap normal

.tokenized.main
  max-width 310px

.tokenized.departure
  max-height 60px
  overflow-x hidden
  overflow-y scroll

.tokenized.arrival
  max-height 60px
  overflow-x hidden
  overflow-y scroll
  
.hamburger
  float left
  margin 2px

.row-status-bar  
  margin 15px 5px 0 5px
  
.col-status-bar  
  padding 0
  
.status-bar-text
  color #333
  font-style italic

.status-bar-counter  
  margin 0px 5px 0 5px

.filter-status
  position relative
  margin-right 5px
  left -2px
  bottom -8px
  vertical-align middle
  color darkorange
  
.filter-status-message
  position relative
  left -2px
  bottom -8px
  font-size smaller
  font-weight bold
  color #333
  margin 0 3px 0 3px
  
.spinner
  position absolute
  right 15px
  float right
  margin 5px 0px 0px 0px
  z-index 2000

.searchBar
  margin 5px 5px 5px 60px
  width 100%

.leaflet-container
  background-color #CDD2D4

.leaflet-control-layers-toggle
	background-image url(packages/fuatsengul_leaflet/images/layers.png)
	width 36px
	height 36px

.leaflet-retina .leaflet-control-layers-toggle
	background-image url(packages/fuatsengul_leaflet/images/layers.png)
	width 36px
	height 36px

.leaflet-top.leaflet-left
  z-index 1004
.leaflet-top.leaflet-right
  z-index 1003
.leaflet-bottom.leaflet-left
  z-index 1002
.leaflet-bottom.leaflet-right
  z-index 1001

#mapLegendPanel
	width 180px

p.intro
	line-height 1.5
	margin 5px 0 35px 0
	font-size larger

.legend
	font-size smaller
	font-weight bold
	margin-left 20px
	display inline-block
  position relative
	top -22px
	text-align left

.legendBlock
	width 17px
	height 17px
	vertical-align middle
	display inline-block

#container
	width 100%
	height 100%

.title
	margin-top 0
	margin-bottom 10px
	text-align center

.notice
	margin 10px 0 5px 0
	line-height 1.5
	text-align center

.info
	padding 6px 8px
	font 14px/16px fonts
	background white
	background rgba(white, 1)
	box-shadow 0 0 15px rgba(black, 0.2)
	border-radius 5px

@media all and (max-width: 480px)
	/* styles for iPhone/Android landscape (and really narrow browser windows) */
	.notice
		font-size: 11px

@media all and (max-width: 320px)
	/* styles for iPhone/Android portrait */
	.notice
		font-size 11px

@media all and (max-width: 240px)
	/* styles for smaller devices */
	.notice
		font-size 11px

.path-detail, .node-detail
	width 320px
	height 250px
	overflow auto

.my-legend .legend-title
  text-align left
  margin-bottom 8px
  font-weight bold
  font-size 90%

.my-legend .legend-scale ul
  margin 0
  padding 0
  float left
  list-style none

.my-legend .legend-scale ul li
  display block
  float left
  width 50px
  margin-bottom 6px
  text-align center
  font-size 80%
  list-style none

.my-legend ul.legend-labels li span
  display block
  float left
  height 15px
  width 50px

.my-legend .legend-source
  font-size 70%
  color #999
  clear both
  width 200px

.my-legend a
  color #777

#flightTableDiv
  width 370px

#flightTableBody
  display:block;
  overflow:auto;
  max-height 200px
  text-align center

thead, tbody tr
  display table
  table-layout fixed

.flightTableRow
  width 350px
  text-align left
  cursor pointer
  cursor hand

#noFlights
  font-style italic

.activeRow
  background-color #d9fafe

.leaflet-heatmap-layer
  z-index -1

.searchBar
  position relative

.twitter-typeahead
  position static !important // Overides typeahead's inline styling

.tt-dropdown-menu
  border-top-left-radius 0
  border-top-right-radius 0
  border 0

.airport-code
  position absolute
  left 10px
  top 50%
  transform translate(0, -50%)
  min-width 15%
  font-size 110%

.airport-info
  color #666
  font-size 95%
  .additional-info
    display block
    font-size 85%
    color #999
    font-style italic
  > span
    text-transform capitalize

.tt-suggestion
  position relative
  padding 5px 10px 5px 20%
  border-bottom 1px solid #f9f9f9
  &:last-child
    border-bottom 0

.tt-suggestion
.tt-suggestion
  &.tt-cursor
  &.tt-is-under-cursor
    background lighten(#DDD, 10%)
    &.airport-name
      color #555
